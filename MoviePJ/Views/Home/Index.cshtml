<div class="slider sliderv2">
	<div class="container">
		<div class="row">
			<div class="slider-single-item">
				@foreach (var films in Model)
				{
					<div class="movie-item">
						<div class="row">
							<div class="col-md-8 col-sm-12 col-xs-12">

								<div class="title-in">
									<div class="cate">
										@foreach (var genresName in films.GenresName)
										{
											if (genresName == "Movie" || genresName == "Anime") { }

											if (genresName == "Science Fiction" || genresName == "Fantasy"
											|| genresName == "Shonen" || genresName == "Isekai")
											{
												<span class="blue"><a href="#">@genresName</a></span>
											}

											if (genresName == "Action" || genresName == "Adventure")
											{
												<span class="orange"><a href="#">@genresName</a></span>
											}

											if (genresName == "Comedy" || genresName == "Drama" || genresName == "Melodrama")
											{
												<span class="yell"><a href="#">@genresName</a></span>
											}

											if (genresName == "Crime" || genresName == "Western")
											{
												<span class="brown"><a href="#">@genresName</a></span>
											}

											if (genresName == "Historical" || genresName == "Mystery" || genresName == "Mecha")
											{
												<span class="black"><a href="#">@genresName</a></span>
											}

											if (genresName == "Romance" || genresName == "Shoujo" || genresName == "Josei")
											{
												<span class="pink"><a href="#">@genresName</a></span>
											}

											if (genresName == "Slice Of Life" || genresName == "School" || genresName == "Kodomomuke")
											{
												<span class="green"><a href="#">@genresName</a></span>
											}

											if (genresName == "Thriller" || genresName == "Horror" || genresName == "Seinen")
											{
												<span class="red"><a href="#">@genresName</a></span>
											}
										}
									</div>
									<h1>
										<a asp-area="" asp-controller="Film"
										   asp-action="FilmDetail"
										   asp-route-slug="@films.Slug"
										   asp-route-filmId="@films.Id">

											@films.Name<br>
											<span>@films.ReleaseYear</span>
										</a>
									</h1>
									<div class="social-btn">
										<a asp-controller="Film"
										   asp-action="FilmWatching"
										   asp-route-slug="@films.Slug"
										   asp-route-filmId="@films.Id" class="parent-btn"><i class="ion-play"></i> Watch film</a>
										<a href="#" class="parent-btn"><i class="ion-heart"></i> Add to Favorite</a>
									</div>
									<div class="mv-details">
										<ul class="mv-infor">
											@if (Convert.ToInt32(films.Time) % 60 != 0)
											{
												int temp = Convert.ToInt32(films.Time) % 60;
												films.Time = films.Time / 60;

												<li>  Run Time: @films.Time h @temp’ </li>
											}
											else
											{
												<li>  Run Time: @films.Time’ </li>
											}

											<li>  Status: @films.StatusName </li>
											<li>  Release: @films.ReleaseYear</li>
										</ul>
									</div>
									<div class="btn-transform transform-vertical">
										<div>
											<a asp-area="" asp-controller="Film"
											   asp-action="FilmDetail"
											   asp-route-slug="@films.Slug"
											   asp-route-filmId="@films.Id"
											   class="item item-1 redbtn">

												More detail
											</a>
										</div>
										<div>
											<a asp-area="" asp-controller="Film"
											   asp-action="FilmDetail"
											   asp-route-slug="@films.Slug"
											   asp-route-filmId="@films.Id"
											   class="item item-2 redbtn hvrbtn">

												More detail
											</a>
										</div>
									</div>
								</div>
							</div>
							<div class="col-md-4 col-sm-12 col-xs-12">
								<div class="mv-img-2">
									@if (films.Cover == null || films.Cover == "")
									{
										<a asp-area="" asp-controller="Film"
										   asp-action="FilmDetail"
										   asp-route-slug="@films.Slug"
										   asp-route-filmId="@films.Id">

											<img src="/images/img_err.png" alt="@films.Name" style="width: 270px; height: 414px; object-fit:cover">
										</a>
									}
									else
									{
										<a asp-area="" asp-controller="Film"
